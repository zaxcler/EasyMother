<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <include layout="@layout/commontitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical" >

            <RelativeLayout
                
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_20" >

                <TextView
                    android:id="@+id/w1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:textSize="14sp"
                    android:text="订单详情" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/w1"
                    android:layout_marginRight="@dimen/dp_20"
                    android:textColor="@color/boroblacktext"
                    android:text="姓       名：" />

                <TextView
                    android:id="@+id/textView2"
                    android:textColor="@color/boroblacktext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_below="@+id/textView1"
                    android:layout_marginTop="16dp"
                    android:text="电       话" />

                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_alignLeft="@+id/user_name"
                    android:background="@color/white"
                    android:textColor="@color/boroblacktext" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/w1"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/w1"
                    android:background="@color/white"
                    android:textColor="@color/boroblacktext" />

                <TextView
                    android:id="@+id/textView9"
                    android:textColor="@color/boroblacktext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/w1"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="15dp"
                    android:text="服务地址：" />

                <TextView
                    android:id="@+id/user_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView9"
                    android:layout_alignLeft="@+id/user_phone"
                    android:textColor="@color/boroblacktext" />

                <TextView
                    android:id="@+id/textView10"
                    android:textColor="@color/boroblacktext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView9"
                    android:layout_marginTop="16dp"
                    android:text="服务时间：" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView10"
                    android:layout_alignLeft="@+id/user_address"
                    android:textColor="@color/boroblacktext" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:background="@color/white" >

                <com.easymother.customview.CircleImageView
                    android:id="@+id/circleImageView1"
                    android:layout_width="@dimen/dp_64"
                    android:layout_height="@dimen/dp_64"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@drawable/baby" />

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/circleImageView1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView5"
                        android:textColor="@color/boroblacktext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="护理师姓名:" />

                    <TextView
                        android:id="@+id/textView6"
                        android:textColor="@color/boroblacktext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="护理师工种:" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@+id/layout1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/nurse_name"
                        android:textColor="@color/boroblacktext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/type"
                        android:textColor="@color/boroblacktext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_14"
                android:text="薪水及支付信息" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20" >

                <LinearLayout
                    android:id="@+id/linealayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text="服务款"
                        android:textColor="@color/boroblacktext" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="￥500元"
                        android:textColor="@color/lightredwine" />
                </LinearLayout>

                <View
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@id/linealayout1"
                    android:layout_below="@id/linealayout1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/line" />

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text="支付类型"
                        android:textColor="@color/boroblacktext" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="一次性付清"
                        android:textColor="@color/boroblacktext" />
                </LinearLayout>

                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@id/linealayout1"
                    android:layout_below="@id/layout2"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/line" />

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/linealayout1"
                    android:layout_below="@id/v2"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text="支付方式"
                        android:textColor="@color/boroblacktext" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/zhifubao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:drawableLeft="@drawable/zhifubao"
                        android:gravity="center"
                        android:textColor="@color/boroblacktext"
                        android:text="支付宝支付" />
                </LinearLayout>

                <View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@id/linealayout1"
                    android:layout_below="@id/layout3"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/line" />
            </RelativeLayout>

            <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="意外险" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/checkBox1"
                android:textColor="@color/boroblacktext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《PICC家政服务机构责任险》" />

            <TextView
                android:textColor="@color/boroblacktext"
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《雇主责任险》" /> -->

            <Button
                android:onClick="pay"
                android:id="@+id/begain_next1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/lightredwine_solid"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="确定并支付费用"
                android:layout_marginBottom="@dimen/dp_20"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>