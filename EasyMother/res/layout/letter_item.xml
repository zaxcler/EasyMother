<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/letter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <ImageView
        android:id="@+id/letter_image"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/letter_title"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baby_image3" />

    <TextView
        android:id="@+id/letter_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/letter_title"
        android:layout_below="@+id/letter_image"
        android:layout_marginTop="14dp"
        android:text="TextView" />

</RelativeLayout>
