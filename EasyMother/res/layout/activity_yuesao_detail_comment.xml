<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:text="雇主评价信息"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="有20位雇主对她进行了评价"
        android:textColor="@color/boroblacktext"
        android:textSize="@dimen/sp_12" />

    <com.easymother.customview.MyListview
        android:id="@+id/comment"
        android:divider="@null"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.easymother.customview.MyListview>

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
           
            android:id="@+id/submit_comment"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_50"
            android:background="@drawable/lightredwine_border"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:text="我要评价"
            android:padding="@dimen/dp_5"
            android:drawableLeft="@drawable/comment_write"
            android:textColor="@color/lightredwine" />
         <TextView
             android:id="@+id/allcomment"
            android:gravity="center"
            android:background="@drawable/lightredwine_border"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:text="查看所有评价"
            android:padding="@dimen/dp_5"
            android:drawableLeft="@drawable/cleckall"
            android:textColor="@color/lightredwine" />
    </LinearLayout>

</LinearLayout>