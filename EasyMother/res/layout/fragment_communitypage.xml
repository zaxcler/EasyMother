<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_title_height"
            android:background="@color/white"
            android:padding="@dimen/dp_5"
             >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="社区"
                android:textColor="@color/orange_red"
                android:textSize="@dimen/sp_20" />

            <ImageView
                android:id="@+id/message"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                android:src="@drawable/comment1" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/view1"
            android:background="@color/line" />
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pulltoreflash" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.easymother.customview.ImageCycleView
                android:id="@+id/imageCycleView2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180" >
            </com.easymother.customview.ImageCycleView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_20" >

                <TextView
                    android:id="@+id/hulishizone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/zone"
                    android:gravity="center"
                    android:text="护理师空间" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line" />

                <TextView
                    android:id="@+id/other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/more"
                    android:gravity="center"
                    android:text="医食衣趣" />
            </LinearLayout>

            <com.easymother.customview.MyListview
                android:id="@+id/mylistview"
                android:divider="@null"
                android:dividerHeight="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                >
            </com.easymother.customview.MyListview>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>