<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/letter_title"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="护理师推荐信"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/letter_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="   设置android textview行间有两种方式android:lineSpacingExtra设置行间距，如”6dip”。android:lineSpacingMultiplier设置行间距的倍数，如”2″。设置TextView组件内首字缩进String 中可用"
        android:textColor="@color/boroblacktext"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/check_all"
        android:padding="@dimen/dp_5"
        android:background="@drawable/lightredwine_border"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/lightredwine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看全部信件"
        android:drawableLeft="@drawable/cleckall"
        android:textSize="@dimen/sp_16" />
    
    <ImageView 
        android:scaleType="fitXY"
        android:id="@+id/letter_image"
        android:src="@drawable/home_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"/>

</LinearLayout>