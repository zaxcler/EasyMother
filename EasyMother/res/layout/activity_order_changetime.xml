<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <include layout="@layout/commontitle" />

    <EditText
        android:id="@+id/beizhu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@color/white"
        android:padding="@dimen/dp_20"
        android:gravity="start"
        android:hint="请填写申请原因"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/boroblacktext"
        android:lines="4"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:text="请选择开始结束时间" />

    

    <LinearLayout
        android:id="@+id/timedialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_30"
        android:visibility="gone"
        android:background="@color/white" >
        
        <TextView
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2015-12-2"
            android:textSize="@dimen/sp_14"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_20"
            android:visibility="visible" />

        <TextView
            android:id="@+id/time3"
             android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_20"
             android:layout_marginLeft="@dimen/dp_20"
            android:text="2015-12-2"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/addtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:src="@drawable/back1" />

        <TextView
            android:id="@+id/currenttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2015-12-2" />

        <ImageView
            android:id="@+id/deletetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:src="@drawable/go" />
    </LinearLayout>

    <com.easymother.customview.MyGridView
        android:id="@+id/gridView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/backgroup_solid"
        android:gravity="@color/line"
        android:horizontalSpacing="@dimen/dp_2"
        android:numColumns="4"
        android:verticalSpacing="@dimen/dp_2"
        android:visibility="gone" >
    </com.easymother.customview.MyGridView>

    <Button
        android:id="@+id/complete"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/lightredwine_solid"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:text="提交"
        android:textColor="@color/white" />

</LinearLayout>