<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <include layout="@layout/commontitle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nannan_photo"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/boroblacktext"
            android:layout_marginLeft="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_20"
            android:text="囡囡头像" />

        <com.easymother.customview.CircleImageView
            android:id="@+id/circleImageView1"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_alignBottom="@+id/nannan_photo"
            android:layout_alignRight="@+id/view1"
            android:src="@drawable/photo" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignRight="@+id/nannan_name"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="14dp"
            android:background="@color/line" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignRight="@+id/nannan_name"
            android:layout_below="@+id/circleImageView1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/line" />

        <TextView
            android:id="@+id/nannan_name"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:textColor="@color/boroblacktext"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21dp"
            android:gravity="right"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
             />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nannan_photo"
            android:layout_below="@+id/view1"
            android:textColor="@color/boroblacktext"
            android:layout_marginTop="14dp"
            android:text="囡囡姓名" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:textColor="@color/boroblacktext"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view2"
            android:layout_below="@+id/view2"
            android:layout_marginTop="20dp"
            android:text="性    别" />

        <View
            android:id="@+id/View01"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignRight="@+id/nannan_name"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="14dp"
            android:background="@color/line" />

        <TextView
            android:id="@+id/nannan_sex"
            android:layout_width="@dimen/dp_200"
            android:gravity="right"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:textColor="@color/boroblacktext"
            android:layout_height="wrap_content"
            android:layout_above="@+id/View01"
            android:layout_alignRight="@+id/View01"
             />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/View01"
            android:textColor="@color/boroblacktext"
            android:layout_below="@+id/View01"
            android:layout_marginTop="17dp"
            android:text="出生时间" />

        <TextView
            android:id="@+id/nannan_birthday"
            android:layout_width="@dimen/dp_200"
            android:gravity="right"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:textColor="@color/boroblacktext"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignRight="@+id/View01"
            />

        <View
            android:id="@+id/View02"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignRight="@+id/nannan_name"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@id/textView6"
            android:background="@color/line" />
    </RelativeLayout>

</LinearLayout>