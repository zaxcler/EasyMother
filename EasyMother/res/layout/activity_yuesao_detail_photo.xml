<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20" >

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_260" />
        

        <View
            android:id="@+id/view2"
            android:layout_width="@dimen/dp_80"
            android:layout_height="0dp" />


        <ImageView
            android:id="@+id/background_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_210"
            android:scaleType="fitXY"
            android:src="@drawable/picture" />

        <com.easymother.customview.CircleImageView
            android:id="@+id/photo"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_66"
            android:layout_alignBottom="@id/view1"
            android:layout_alignRight="@id/view2"
            android:padding="@dimen/dp_5"
            android:src="@drawable/yuan" >
        </com.easymother.customview.CircleImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/background_photo"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/photo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="郭美美"
                android:textColor="@color/liangboro"
                android:textSize="@dimen/dp_18" />

            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工号：11101"
                android:textColor="@color/boroblacktext"
                android:textSize="@dimen/dp_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/photo"
            android:layout_below="@id/photo"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/mudred"
                android:paddingTop="@dimen/dp_1"
                android:paddingBottom="@dimen/dp_1"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="月嫂"
                android:textSize="12sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@color/purple"
                 android:paddingTop="@dimen/dp_1"
                android:paddingBottom="@dimen/dp_1"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="52岁"
                android:textSize="12sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/workyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@color/lightredwine"
                 android:paddingTop="@dimen/dp_1"
                android:paddingBottom="@dimen/dp_1"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="从业15年"
                android:textSize="12sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ysoryys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/adrress"
            android:layout_below="@id/background_photo"
            android:layout_marginRight="@dimen/dp_5"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:gravity="bottom|right"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/label_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="初级护理师"
                android:textColor="@color/mudyellow"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_5"
                android:text="￥5880元/26天"
                android:textColor="@color/mudred"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_5"
                android:text="市场价：15888元/26天"
                android:textColor="@color/boroblacktext"
                android:textSize="@dimen/dp_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cuishi_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/layout1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="星级 :"
                android:textColor="@color/mudyellow"
                android:textSize="@dimen/dp_12" />

            <RatingBar
                android:id="@+id/ratingBar1"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3.5" />
        </LinearLayout>

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/layout1"
            android:layout_below="@id/layout1"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            android:text="籍贯：杭州"
            android:textColor="@color/boroblacktext"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/adrress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/layout1"
            android:layout_below="@id/area"
            android:text="现居地：浙江省杭州市"
            android:textColor="@color/boroblacktext"
            android:textSize="@dimen/dp_12" />

        <com.easymother.customview.CircleImageView
            android:id="@+id/photo2"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_alignBottom="@+id/photo"
            android:layout_alignRight="@+id/photo"
            android:padding="@dimen/dp_5"
            android:src="@drawable/photo" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_20"
                android:layout_weight="1"
                android:drawableLeft="@drawable/image1"
                android:gravity="center"
                android:text="身份验证"
                android:textColor="@color/boroblacktext"
                android:textSize="@dimen/sp_9" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_20"
                android:layout_weight="1"
                android:drawableLeft="@drawable/image2"
                android:gravity="center"
                android:text="证书验证"
                android:textColor="@color/boroblacktext"
                android:textSize="@dimen/sp_9" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_20"
                android:layout_weight="1"
                android:drawableLeft="@drawable/image3"
                android:gravity="center"
                android:text="技能考核"
                android:textColor="@color/boroblacktext"
                android:textSize="@dimen/sp_9" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_20"
                android:layout_weight="1"
                android:drawableLeft="@drawable/image4"
                android:gravity="center"
                android:text="服务考核"
                android:textColor="@color/boroblacktext"
                android:textSize="@dimen/sp_9" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_20"
                android:layout_weight="1"
                android:drawableLeft="@drawable/image5"
                android:gravity="center"
                android:text="信息归档"
                android:textColor="@color/boroblacktext"
                android:textSize="@dimen/sp_9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:src="@drawable/ship" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toRightOf="@id/image1"
                    android:textColor="@color/purple"
                    android:textSize="10sp"
                    android:text="护理视频" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv2"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_toRightOf="@id/image1"
                    android:background="@drawable/purple_solid2"
                    android:gravity="center"
                    android:text="点击观看"
                    android:padding="1dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kongjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:src="@drawable/kongj" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_toRightOf="@id/image2"
                    android:textSize="10sp"
                     android:textColor="@color/orange"
                    android:text="护理师互动空间" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv3"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_toRightOf="@id/image2"
                    android:gravity="center"
                    android:text="点击查看"
                    android:padding="1dp"
                    android:textColor="@color/white"
                    android:background="@drawable/oragen_solid"
                    android:textSize="@dimen/sp_10" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="职业证书"
            android:textColor="@color/blacktext" />

        <com.easymother.customview.MyGridView
            android:id="@+id/gridView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:numColumns="3" >
        </com.easymother.customview.MyGridView>

        <TextView
            android:id="@+id/check_zhengshu"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/lightredwine_border"
            android:drawableLeft="@drawable/check"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="查看纸质证书"
            android:textColor="@color/lightredwine" />
    </LinearLayout>

</LinearLayout>