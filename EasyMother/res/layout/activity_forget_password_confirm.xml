<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/commontitle" />

    

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/boro_border"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/phone_ahead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_20"
            android:paddingTop="@dimen/dp_20"
            android:text="请输入验证码"
            android:textColor="@color/boroblacktext"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/identity_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/boro_solid"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="43s后重新获取"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12" />
    </LinearLayout>

     <View
        android:id="@+id/view1"
        android:layout_below="@id/linearLayout1"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/phone_ahead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="2"
            android:paddingBottom="@dimen/dp_20"
            android:paddingTop="@dimen/dp_20"
            android:text="设置新密码（6-20字母或数字）"
            android:textColor="@color/boroblacktext"
            android:textSize="@dimen/dp_16" />
        <ImageView 
            android:id="@+id/showpassword"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/eye"/>
    </LinearLayout>

   
     <View
        android:layout_below="@id/layout2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" 
        android:layout_marginBottom="@dimen/dp_20"/>
     
     <Button
        android:id="@+id/comfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="87dp"
        android:background="@color/lightredwine"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:text="确认输入"
        android:textColor="@color/white" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/linearLayout1"
         android:layout_below="@+id/title"
         android:textColor="@color/boroblacktext"
         android:layout_marginTop="16dp"
         android:text="短信验证码已经发送至你的手机：1234411231" />

</RelativeLayout>