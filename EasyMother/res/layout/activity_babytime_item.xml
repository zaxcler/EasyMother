<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/dian" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/textView2"
            android:text="2015"
            android:textColor="@color/boroblacktext" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/textView2"
            android:layout_below="@+id/textView2"
            android:text=" 我叫舒玫。伴着一声清脆的啼哭声，打破了2006年10月10日清晨的宁静，我于7点34分“准时”来到了这个缤纷多彩的世界，像天使一样降落在亲爱的爸爸妈妈身边。"
            android:textColor="@color/boroblacktext" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView4"
            android:layout_margin="@dimen/dp_10"
            android:scaleType="fitXY"
            android:src="@drawable/baby_image3" />

      

        <TextView
            android:id="@+id/textView7"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3"
            android:layout_toLeftOf="@+id/textView1"
            android:text="24"
            android:textColor="@color/boroblacktext"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView8"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="4/28"
            android:textColor="@color/boroblacktext" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignRight="@+id/imageView2"
            android:text="天啦"
            android:textColor="@color/boroblacktext"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView7"
            android:paddingTop="@dimen/dp_10"
            android:text="囡囡已经"
            android:textColor="@color/boroblacktext"
            android:textSize="@dimen/sp_12" />
          <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/imageView2"
            android:background="@color/background" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignRight="@+id/imageView2"
            android:text="TextView"
            android:gravity="clip_horizontal"
            android:drawableLeft="@drawable/babytime_share"
            android:textColor="@color/boroblacktext" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignRight="@+id/textView3"
            android:layout_below="@+id/line"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:drawableLeft="@drawable/babytime_edit"
            android:gravity="clip_horizontal"
            android:text="编辑"
            android:textColor="@color/boroblacktext" />
    </RelativeLayout>

</LinearLayout>