<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background" >

    <include layout="@layout/commontitle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_100"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/test2" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/image"
            android:text="王阿芬"
            android:textColor="@color/blacktext"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/image"
            android:background="@drawable/lightredwine_solid"
            android:padding="@dimen/dp_2"
            android:text="月嫂"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginRight="@dimen/dp_5"
            android:text="从业8年"
            android:textColor="@color/boroblacktext"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toRightOf="@+id/textView3"
            android:text="45岁"
            android:textColor="@color/boroblacktext"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:text="杭州"
            android:textColor="@color/boroblacktext"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:text="现居住于杭州下沙"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_toLeftOf="@+id/textView6"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_alignRight="@+id/textView7"
            android:text="市场价：15800元/26元"
            android:textColor="@color/boroblacktext"
            android:textSize="@dimen/dp_10" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_alignLeft="@+id/ratingBar1"
            android:text="5800元/月"
            android:textColor="@color/lightredwine"
            android:textSize="@dimen/sp_16" />

        <RatingBar
            android:id="@+id/ratingBar1"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/image"
            android:layout_marginRight="16dp"
            android:numStars="5"
            android:rating="3.5" />

    </RelativeLayout>
    <TextView 
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加照片/备注"
       android:padding="@dimen/dp_20"
       android:background="@color/white"
       />
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
       android:background="@color/line"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_photo"	
            android:layout_margin="@dimen/dp_10"
            android:src="@drawable/babytime_add1"
            />
       
    </LinearLayout>
     <View android:layout_width="match_parent"
        android:layout_height="1dp"
       android:background="@color/line"/>
     <EditText android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:lines="5"
         android:background="@color/white"
         android:gravity="top"
         android:hint="请输入评价内容"
         />

     <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:background="@color/lightredwine"
        android:text="发表评论"
        android:textColor="@color/white"
        android:paddingTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_10"
        />
</LinearLayout>