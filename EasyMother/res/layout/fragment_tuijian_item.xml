<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" 
    android:background="@color/white">
    <ImageView 
        android:layout_margin="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:id="@+id/tuijian_photo"
        android:layout_gravity="center"
        android:src="@drawable/test1"
        android:scaleType="fitXY"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:background="@color/white"
        >
         <TextView
            android:id="@+id/tuijian_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="王阿芬"
            android:layout_margin="@dimen/dp_2"
            android:textColor="@color/liangboro"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_margin="@dimen/dp_2"
            android:id="@+id/tuijian_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tuijian_name"
            android:layout_centerVertical="true"
            android:text="￥6000"
             android:layout_centerHorizontal="true"
            android:textColor="@color/deeppink"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tuijian_num"
            android:layout_margin="@dimen/dp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tuijian_price"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/heart"
            android:textColor="@color/boroblacktext"
            android:textSize="@dimen/sp_12" />
       
    </RelativeLayout>
    

</LinearLayout>
