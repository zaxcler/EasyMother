<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <!--
    <android.support.v4.view.ViewPager
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>
    -->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/lightboro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_tab_height"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/home_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_page_icon"
                android:layout_width="@dimen/activity_tab_image_width"
                android:layout_height="@dimen/activity_tab_image_height"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/home1" />

            <TextView
                android:id="@+id/home_page_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="首页"
                android:textColor="@color/liangboro" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/community_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/community_page_icon"
                android:layout_width="@dimen/activity_tab_image_width"
                android:layout_height="@dimen/activity_tab_image_height"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/community" />

            <TextView
                android:id="@+id/community_page_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社区"
                android:layout_marginBottom="@dimen/dp_5"
                android:textColor="@color/liangboro" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/babytime_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/babytime_page_icon"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_width="@dimen/activity_tab_image_width"
                android:layout_height="@dimen/activity_tab_image_height"
                android:src="@drawable/babytime" />

            <TextView
                android:layout_marginBottom="@dimen/dp_5"
                android:id="@+id/babytime_page_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="囡囡记"
                android:textColor="@color/liangboro" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/my_page_icon"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_width="@dimen/activity_tab_image_width"
                android:layout_height="@dimen/activity_tab_image_height"
                android:src="@drawable/user" />

            <TextView
                android:layout_marginBottom="@dimen/dp_5"
                android:id="@+id/my_page_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人"
                android:textColor="@color/liangboro" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>