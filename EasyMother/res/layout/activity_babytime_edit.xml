<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >
    
    <include layout="@layout/commontitle"/>
    
    <EditText 
        android:id="@+id/baby_edit"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:hint="记录宝宝新鲜事儿..."
        android:textColor="@color/lightlightboro"
        android:gravity="top"
        android:textSize="@dimen/dp_16"
        android:padding="@dimen/dp_5"
        android:layout_height="@dimen/dp_150"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <GridView 
            android:padding="2dp"
            android:id="@+id/gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:horizontalSpacing="@dimen/dp_2"
            android:verticalSpacing="@dimen/dp_2">
        </GridView>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_photo"	
            android:layout_margin="@dimen/dp_10"
            android:src="@drawable/babytime_add1"
            />
        
    </LinearLayout>

</LinearLayout>
