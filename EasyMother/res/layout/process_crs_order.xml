<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <include layout="@layout/commontitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_10" >

                <com.easymother.customview.CircleImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_72"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:src="@drawable/photo" />

                <TextView
                    android:id="@+id/nurse_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_toRightOf="@+id/textView1"
                    android:text="李四"
                    android:textColor="@color/boroblacktext" />

                <TextView
                    android:id="@+id/nurse_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_alignLeft="@+id/nurse_name"
                    android:text="400-8068-222"
                    android:textColor="@color/boroblacktext" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView1"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="等级："
                    android:textColor="@color/boroblacktext" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView5"
                    android:layout_toLeftOf="@+id/nurse_phone"
                    android:text="电话："
                    android:textColor="@color/boroblacktext" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/nurse_phone"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/imageView1"
                    android:text="姓名："
                    android:textColor="@color/boroblacktext" />

                <TextView
                    android:id="@+id/nurse_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_toRightOf="@+id/nurse_phone"
                    android:text="￥480/次"
                    android:textColor="@color/mudyellow"
                    android:textSize="@dimen/dp_18"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/jobtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/nurse_price"
                    android:layout_alignLeft="@+id/nurse_phone"
                    android:text="金牌"
                    android:textColor="@color/liangboro" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_10" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="项目名称：" />

                <TextView
                    android:id="@+id/project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView8"
                    android:layout_alignBottom="@+id/textView8"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/textView15"
                    android:text="产前开奶"
                    android:textColor="@color/lightredwine" />

                <com.example.demobyimage.CustomHorizontalScrollView
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView15"
                    android:layout_below="@+id/textView8"
                    android:orientation="horizontal"
                     >

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView15"
                        android:layout_below="@+id/textView8"
                        android:layout_margin="@dimen/dp_5"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_10" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textView2"
                            android:layout_below="@+id/textView8" />
                    </LinearLayout>
                </com.example.demobyimage.CustomHorizontalScrollView>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/linearLayout1"
                    android:layout_alignLeft="@+id/textView8"
                    android:layout_alignParentRight="true"
                    android:text="套餐类型：" />

                <LinearLayout
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/linearLayout1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/textView9"
                        android:drawableLeft="@drawable/clock"
                        android:gravity="center"
                        android:text="项目时长:"
                        android:textColor="@color/boroblacktext"
                        android:textSize="@dimen/dp_10" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/linearLayout1"
                        android:layout_alignTop="@+id/project_name"
                        android:gravity="center"
                        android:text="120分钟起"
                        android:layout_marginRight="@dimen/dp_20"
                        android:textColor="@color/boroblacktext"
                        android:textSize="@dimen/dp_10" />
                </LinearLayout>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView15"
                    android:layout_alignBottom="@+id/textView15"
                    android:layout_alignRight="@+id/linearLayout1"
                    android:layout_marginRight="18dp"
                    android:text="￥0元"
                    android:textColor="@color/mudyellow" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/linearLayout1"
                    android:background="@color/lightlightboro" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/view1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="项目总费用" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/view1"
                android:layout_below="@id/view1"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/day1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/lightredwine"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:text="今天"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightlightboro" />

                <TextView
                    android:id="@+id/day2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_5"
                    android:text="明天" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightlightboro" />

                <TextView
                    android:id="@+id/day3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:text="后天" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightlightboro" />

                <TextView
                    android:id="@+id/day4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:text="星期四" />
            </LinearLayout>

            <com.easymother.customview.MyGridView
                android:id="@+id/gridView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/backgroup_solid"
                android:gravity="@color/line"
                android:horizontalSpacing="@dimen/dp_2"
                android:numColumns="4"
                android:verticalSpacing="@dimen/dp_2" >
            </com.easymother.customview.MyGridView>

            <Button
                android:id="@+id/begain_sign"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/lightredwine_solid"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="开始签约"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>