<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/nannan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circleImageView1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/circleImageView1"
        android:text="Angle" />

    <TextView
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nannan_name"
        android:layout_below="@+id/nannan_name"
        android:text="出生24天" />

    <com.easymother.customview.CircleImageView
        android:id="@+id/circleImageView1"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:src="@drawable/user_photo" />

</RelativeLayout>