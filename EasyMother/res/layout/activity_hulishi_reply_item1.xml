<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
         >

        <LinearLayout
            android:id="@+id/pictures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:orientation="horizontal" >
        </LinearLayout>

        

        <TextView
            android:id="@+id/floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3"
            android:layout_alignLeft="@+id/user_name"
            android:text="1楼"
            android:textColor="@color/lightredwine"
            android:textSize="@dimen/dp_12" />

        <com.easymother.customview.CircleImageView
            android:id="@+id/circleImageView1"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/photo" />

        <TextView
            android:id="@+id/reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/user_name"
            android:drawableLeft="@drawable/huifu_1"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/boro" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/floor"
            android:layout_marginLeft="19dp"
            android:layout_toRightOf="@+id/circleImageView1"
            android:text="杨烨"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/show_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:text="9分钟前"
            android:textColor="@color/boroblacktext"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_toRightOf="@+id/floor"
            android:text="丨"
            android:textColor="@color/boroblacktext"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/floor"
            android:layout_below="@+id/circleImageView1"
            android:layout_marginTop="10dp"
            android:textColor="@color/liangboro"
            android:text="回复" />

        <TextView
            android:id="@+id/parent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:text="郭泽"
            android:textColor="@color/lightredwine" />

        <TextView
            android:id="@+id/child_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="@color/liangboro"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/parent_name"
            android:text="：瞎扯淡。。" />

        <LinearLayout
            android:layout_alignLeft="@+id/textView3"
            android:id="@+id/linearlayout"
            android:layout_below="@+id/child_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@color/background"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/parent_conten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="@color/liangboro"
                android:text="我还是到哪块快打死了阿斯顿空间啊啊很少肯定就按时发空间啊" />

        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@id/linearlayout"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/lightlightboro" />
    </RelativeLayout>

</LinearLayout>